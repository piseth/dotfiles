#
# Aliases
#

alias grep='grep --color=auto'
alias hosts='vim /etc/hosts'
alias h='history'
alias headers='curl -D - -o /dev/null --silent -A firefox'
alias vimc='rm ~/.vim/_temp/*'
alias ping='ping -a'

# Vagrant
alias vp='vagrant provision'
alias vr='vagrant reload'
alias vh='vagrant halt'
alias vhf='vagrant halt --force'
alias vd='vagrant destroy'

# Find git conflicts in current repo
alias gitc="grep -r -e '<<<<\|>>>>' *"

# Grep DNS entries
alias dgrep="dig @tools.lhotse.ov.otto.de lhotse.ov.otto.de -t AXFR|grep"

# Disable deprecation warnings
# @see http://stackoverflow.com/questions/5591509/suppress-ruby-warnings-when-running-specs
alias ruby="ruby -W0"
